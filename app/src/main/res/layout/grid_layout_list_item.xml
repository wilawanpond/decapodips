<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/sauce1"
            android:layout_marginTop="5dp"
            android:contentDescription="products image" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView17"
            android:layout_alignStart="@+id/imageView17"
            android:layout_alignEnd="@+id/imageView17"
            android:gravity="center"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/poppins"
            android:text="Title"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_alignStart="@+id/textView24"
            android:layout_alignEnd="@+id/textView24"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="$15"
            android:textColor="#E32227"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>