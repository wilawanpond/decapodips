<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDB58"
    tools:context=".WelcomePage">

    <TextView
        android:id="@+id/whiteBox"
        android:layout_width="405dp"
        android:layout_height="397dp"
        android:background="@drawable/box"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/info"
        android:layout_width="317dp"
        android:layout_height="66dp"
        android:fontFamily="@font/poppins"
        android:text="Get hooked on flavor, where every dip tells a tale of the sea!"
        android:textColor="#80000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decapodips"
        app:layout_constraintVertical_bias="0.148" />

    <TextView
        android:id="@+id/welcomeTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Welcome to"
        android:textColor="#000000"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.248"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/decapodips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="436dp"
        android:fontFamily="@font/fredoka_one"
        android:text="DECAPODIPS"
        android:textColor="#E32227"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signInBtn"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_marginEnd="44dp"
        android:text="Sign In"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/fredoka_one"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.395"
        app:backgroundTint="@null"/>

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="147dp"
        android:layout_height="52dp"
        android:layout_marginStart="44dp"
        android:text="Sign Up"
        android:background="@drawable/round_btnyellow"
        android:fontFamily="@font/fredoka_one"
        android:textSize="20sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintVertical_bias="0.395"
        app:backgroundTint="@null"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="368dp"
        android:layout_height="522dp"
        app:layout_constraintBottom_toTopOf="@+id/whiteBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.611"
        app:srcCompat="@drawable/rotatesauce" />


</androidx.constraintlayout.widget.ConstraintLayout>